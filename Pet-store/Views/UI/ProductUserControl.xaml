<UserControl x:Class="Pet_store.Views.UI.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pet_store.Views.UI"
             xmlns:viewModel="clr-namespace:Pet_store.ViewModels.UI"
             mc:Ignorable="d" Height="150" Width="280">

    <UserControl.DataContext>
        <viewModel:ProductUserControlViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding Category}" FontSize="16"/>
            <TextBlock Text="{Binding Rating}" FontSize="14"/>
            <TextBlock Text="{Binding Price}" FontSize="18"/>
        </StackPanel>

        <ToggleButton Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5 5"/>
    </Grid>
</UserControl>
